{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "webview:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "window:allow-start-dragging",
    "window:allow-center",
    "window:allow-close",
    "window:allow-hide",
    "window:allow-minimize",
    "window:allow-maximize",
    "window:allow-is-fullscreen",
    "window:allow-set-fullscreen",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "http://*:**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "https://*:**"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-cancel",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "http://*:**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "https://*:**"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-read-body",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "http://*:**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "https://*:**"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-send",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "http://*:**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "https://*:**"
        }
      ]
    }
  ]
}